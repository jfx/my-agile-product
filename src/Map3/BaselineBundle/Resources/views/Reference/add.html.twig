{% extends 'Map3CoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Reference add{% endblock title %}

{% block headline %}{{ baseline_breadcrumb('Add reference') }}{% endblock headline %}

{% block content %}
<div class="row-fluid">
    {{ render(controller("Map3BaselineBundle:Baseline:tabs", {'activeTab' : 'references'})) }}
</div>
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        {% include "Map3CoreBundle::form.html.twig" %}

    </div>
</div>
<div class="row-fluid">
    <a href="{{ path('bln-refs_index', {'id': baseline.id}) }}"
       class="btn btn-default btn-sm"
       title="Return to list">
        {{ icon('chevron-left') }} Return to list
    </a>
</div>
{% endblock content %}
