{% extends 'Map3CoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Profile - Roles{% endblock title %}

{% block headline %}{{ breadcrumb(['Admin', 'Profile', 'Roles']) }}{% endblock headline %}

{% block content %}
<div class="row-fluid">
<ul class="nav nav-tabs" role="tablist">
    <li><a href="{{ path('user_profile') }}">Main</a></li>
    <li><a href="{{ path('user_password') }}">Password</a></li>
    <li class="active"><a href="#">Roles</a></li>
</ul>
</div>
<br />
<div class="row">
<div class="col-md-8 col-md-offset-2">
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Product</th>
            <th>Role</th>
        </tr>
    </thead>
    <tbody>
{% for product in products %}
            <tr>
                <td>{{ product.name }}</td>
                <td>{{ product.label }}</td>
            </tr>
{% else %}
        <tr><td colspan="2">No role</td></tr>
{% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock content %}
