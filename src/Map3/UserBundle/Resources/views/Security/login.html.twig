{% extends "FOSUserBundle::layout.html.twig" %}

{% block title %}{{ parent() }} - Login{% endblock title %}

{% block navbar %}
    <div class="login_page_header">
    <br />
    <div class="center">
        <img src="{{ asset('images/login.png') }}" alt="my agile product logo"
             height="67" width="216" >
    </div>
    <br />
    </div>
    <br />
{% endblock navbar %}

{% block headline %}{% endblock headline %}

{% block fos_user_content %}
{% if error %}
   <div class="alert alert-danger alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        {{ error.messageKey|trans(error.messageData, 'security') }}
    </div>
{% endif %}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

<form  class="form-horizontal well" action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <div class="form-group">
        <label  class="col-sm-3 control-label" for="username">{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-sm-6">
            <input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" />
        </div>
    </div>

    <div class="form-group">
        <label  class="col-sm-3 control-label" for="password">{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}</label>
        <div class="col-sm-6">
            <input type="password" class="form-control" id="password" name="_password" required="required" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9">
            <div class="checkbox">
                <label>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"> {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
            </div>
        </div>
    </div>
    <div class="center">
        <button type="submit" id="login" class="btn btn-sm btn-cust" title="Login">
            {{ icon('log-in', true) }}
            &nbsp;&nbsp;{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}&nbsp;&nbsp;
        </button>
    </div>
    <div class="center">
        <br />
        <a href="{{ path('fos_user_resetting_request') }}">Forgot your password ?</a>
    </div>

</form>

        </div>
    </div>
</div>
{% endblock fos_user_content %}
