<form novalidate="novalidate" id="formDel" class="form-horizontal well"
     method="post">

    {{ form_widget(form) }}

    <div class="center">
        <a class="btn btn-sm btn-info" href="#modalDel"
           title="Remove" data-toggle="modal">
            {{ icon('remove', true) }}&nbsp;&nbsp;Remove&nbsp;&nbsp;
        </a>
    </div>
</form>

<div class="modal fade" id="modalDel" tabindex="-1" role="dialog"
     aria-labelledby="modalDelLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
            <span class="sr-only">Close</span>
        </button>
        <h4 class="modal-title" id="modalDelLabel">Confirmation</h4>
      </div>
      <div class="modal-body">
        Are you sure you want to delete this item ?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-info btn-sm" id="button_ok"
                onclick="formDel.submit()">
            &nbsp;&nbsp;&nbsp;&nbsp;Ok&nbsp;&nbsp;&nbsp;&nbsp;
        </button>
        <button type="button" class="btn btn-default btn-sm"  id="button_cancel"
                data-dismiss="modal">
            Cancel
        </button>
      </div>
    </div>
  </div>
</div>
