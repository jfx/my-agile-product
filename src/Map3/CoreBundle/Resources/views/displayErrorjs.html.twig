<script type="text/javascript">
function displayError(responseJSON, code) {

    if ((typeof responseJSON === "undefined")
         || (typeof responseJSON.message === "undefined")
         || (responseJSON.message.length === 0)
        )
        var msg = 'Internal error';
    else if (code === 403)
        var msg = 'Authentication has expired';
    else if (code === 404)
        var msg = 'Node not found';
    else
        var msg = responseJSON.message;

    $("div.msg-error").html(
        '<div class="alert alert-danger alert-dismissible" role="alert">'
        + '<button type="button" class="close" data-dismiss="alert">'
        + '<span aria-hidden="true">&times;</span>'
        + '<span class="sr-only">Close</span>'
        + '</button>'
        + msg
        + ' - Please, '
        + '<a id="reload" href="#" title="Reload" onclick="location.reload(true);">'
        + 'reload the page</a>'
        + '</div>'
    );
}
</script>
