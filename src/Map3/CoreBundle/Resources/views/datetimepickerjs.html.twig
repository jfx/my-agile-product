<script type="text/javascript">
    $(function(){

        $('[data-provider="datetimepicker"]').datetimepicker({
            autoclose: true,
            format: '{{ formatDate }} hh:ii',
            weekStart: 1,
            pickerPosition: 'bottom-left',
            todayBtn: true
        });

        $('input[type=hidden]', '.date').each(function(){
                if($(this).val()) {
                    $(this).parent().datetimepicker('setValue');
                }
        });

    });
</script>
