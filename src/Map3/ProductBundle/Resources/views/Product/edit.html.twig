{% extends 'Map3CoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Product edit - Id : {{ product.id }}{% endblock title %}

{% block headline %}{{ product_breadcrumb('Edit') }}{% endblock headline %}

{% block content %}
<div class="row-fluid">
    {% include "Map3ProductBundle:Product:tabs.html.twig" with {'activeTab' : 'main'} %}
</div>
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-3">

        {% include "Map3CoreBundle::form.html.twig" %}

    </div>
</div>
<div class="row-fluid">
    <a class="btn btn-default btn-sm" href="{{ path('product_index') }}"
       title="Return to list">
        {{ icon('chevron-left') }} Return to list
    </a>
</div>
{% endblock content %}
