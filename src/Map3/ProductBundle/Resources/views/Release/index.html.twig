{% extends 'Map3CoreBundle::layout.html.twig' %}

{% block title %}{{ parent() }} - Releases list{% endblock title %}

{% block headline %}{{ product_breadcrumb('Releases list') }}{% endblock headline %}

{% block content %}
<div class="row-fluid">
<ul class="nav nav-tabs" role="tablist">
    <li><a id="a_main" href="{{ path('product_view', {'id': product.id}) }}">Main</a></li>
    <li class="active"><a id="a_releases" href="#"><span id="badge_releases" class="badge badge-inverse">{{ child.releases }}</span>&nbsp;&nbsp;Releases</a></li>
    <li><a id="a_users" href="{{ path('pdt-user_index') }}"><span id="badge_users" class="badge badge-info">{{ child.users }}</span>&nbsp;&nbsp;Users</a></li>
</ul>
</div>
<br />
<div class="row">
<div class="col-md-10 col-md-offset-1">
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
            {% if is_granted('ROLE_DM_MANAGER') %}
                    <a class="btn btn-default btn-xs"
                       href="{{ path('release_add') }}"
                        title="Add">
                        {{ icon('plus') }}
                    </a>
            {% endif %}
               &nbsp;&nbsp;Action
            </th>
            <th>Name</th>
            <th>Date</th>
            <th>Closed</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
{% for release in releases %}
            <tr>
                <td class="action">
                    <a href="{{ path('release_view', {'id': release.id}) }}"
                       class="btn btn-default btn-xs"
                       title="View release #{{ release.id }}">
                        {{ icon('eye-open') }}
                    </a>
                    {% if is_granted('ROLE_DM_MANAGER') %}
                    <a href="{{ path('release_edit', {'id': release.id}) }}"
                       class="btn btn-default btn-xs"
                       title="Edit release #{{ release.id }}">
                        {{ icon('edit') }}
                    </a>
                    <a href="{{ path('release_del', {'id': release.id}) }}"
                       class="btn btn-default btn-xs"
                       title="Delete release #{{ release.id }}">
                        {{ icon('trash') }}
                    </a>
                    {% endif %}
                </td>
                <td>{{ release.name }}</td>
                <td>{{ release.releaseDate|localeDate }}</td>
                <td>{% if release.isClosed() %}{{ icon('ok') }}{% else %}-{% endif %}</td>
                <td>{{ release.details }}</td>
            </tr>
{% else %}
            <tr><td colspan="5">No release</td></tr>
{% endfor %}
    </tbody>
</table>
</div>
</div>
{% endblock content %}
